# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Indentation override for all JS under lib directory
# [lib/**.js]
[*.{js,ts,svelte}]
indent_style = space
indent_size = 2
semi = false
single_quote = true

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
